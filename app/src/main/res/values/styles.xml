<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="commonFont">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>/>
    </style>

    <style name="notesFont">
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/white</item>/>
    </style>

    <style name="notesFontBlack">
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/black</item>/>
    </style>
    
    <style name="customTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_size_12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="imageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/image_constraints</item>
    </style>
</resources>